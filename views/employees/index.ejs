<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Management</title>
</head>
<body>
  <h1>Employee List</h1>
  <ul>
    <% employees.forEach(employee => { %>
      <li><%= employee.name %> - <%= employee.position %> (<a href="/employees/<%= employee._id %>/edit">Edit</a>, <a href="/employees/<%= employee._id %>/delete">Delete</a>)</li>
    <% }) %>
  </ul>
  <a href="/employees/new">Add New Employee</a>
</body>
</html>

